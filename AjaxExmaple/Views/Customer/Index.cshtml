@model IEnumerable<AjaxExmaple.Models.CustomerModel>

    <style>
        ul{
        list-style-type:none;
        }

    #customerInformationArea {
        border: 1px solid black;
        border-radius:5px;
        margin:10px;
        padding:10px
    }
    </style>

<p>
    Current time: @DateTime.Now
</p>

    <form asp-action="ShowOnePerson" asp-asp-controller="Customer" >
        <ul>
            @foreach (var item in Model) {
                    <li>
                <input class="customeRadio" type="radio" name="Id" id="Id" value="@item.Id"></input>
                        <label>@item.Name</label>
                    </li>
            }
        </ul>
        <input type="submit" id="selectCustomer" />
    </form>

<div id="customerInformationArea" >
    <p>this is the info about customer</p>
</div>

